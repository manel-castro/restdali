// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GeneralPageContent {
  id        String    @id @default(uuid())
  pageTitle String
  favicon   String
  Project   Project[]
}

model Project {
  id                      String                @id @default(uuid())
  name                    String
  domain                  String                @unique
  generalPageContent      GeneralPageContent    @relation(fields: [generalPageContentId], references: [id])
  generalPageContentId    String
  paginas                 Page[]
  paginasOrder            String[]
  languagesForTranslation String[]
  FieldValueByProject     FieldValueByProject[]
}

model Page {
  id            String    @id @default(uuid())
  name          String
  translations  String[]
  sections      Section[]
  sectionsOrder String[]
  projects      Project[]
}

model Section {
  id           String   @id @default(uuid())
  name         String
  translations String[]
  Fields       Field[]
  Page         Page[]
}

model Field {
  id                String                @id @default(uuid())
  name              String
  // translationsValue String[]
  translationsLabel String[]
  valuesByProject   FieldValueByProject[]

  // Project   Project   @relation(fields: [projectId], references: [id])
  // projectId String
  Section Section[]
}

model FieldValueByProject {
  id        String   @id @default(uuid())
  values    String[]
  project   Project  @relation(fields: [projectId], references: [id])
  Field     Field?   @relation(fields: [fieldId], references: [id])
  fieldId   String?
  projectId String
}
